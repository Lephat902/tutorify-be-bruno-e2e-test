meta {
  name: Upload jpg avatar with invalid size
  type: http
  seq: 1
}

post {
  url: {{base_url}}/files?uploadType=avatar
  body: multipartForm
  auth: none
}

query {
  uploadType: avatar
}

body:multipart-form {
  file: @file(test-data/sample-1.jpg)
}

assert {
  res.status: eq 413
  res.responseTime: lte {{high_response_time}}
}
